<%- include("../../partials/header") %>
    <div class="container">
        <div class="card mt-5" >
            <div class="card-body">
                <div class="card-title">
                    <h2>Cadastro de atividades</h2>
                </div>
                <form action="/admin/activity/register" method="post">
                    <p class="form-label mt-3">Nome</p>
                    <input type="text" class="form-control mb-3" name="name">
                    <p class="form-label">Descrição</p>
                    <textarea name="description" class="form-control mb-3" cols="30" rows="10"></textarea>
                    <p class="form-label">Professor</p>
                    <input type="text" class="form-control mb-3" name="teacher">
                    <p class="form-label">Nivel de importancia</p>
                    <select class="form-select mb-4" name="important">
                        <option value="1">Importante</option>
                        <option value="2">Normal</option>
                        <option value="3">Eletiva</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </form>
                
            </div>
        </div>
        
    </div>
    
<%- include("../../partials/footer") %>
